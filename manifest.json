{
  "name": "Polyglot",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Translates selected english text into russian in one click.",
  /*
  "browser_action": {
    "default_icon": "/media/icons/app-128.png"
    "default_popup": "popup.html"
  },*/
  "background": {
    "scripts": ["jquery.js", "functional.js", "array.extensions.js", "dictionary.js", "string.extensions.js", "preferences.js", "services.js", "polyglot.js"]
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "contextMenus", 
    "<all_urls>"
  ], 
  "icons": {
    "128": "/media/icons/app-128.png"
  },
  "content_scripts": [
  {
    "all_frames": true,
    "matches": ["<all_urls>"],
    "js": ["jquery.js", "popup.js"]
  }],
  "options_page": "options.html",
  "web_accessible_resources": [
     "popup.html", "polyglot.css", "frame.html", "/media/icons/close.svg", "/media/icons/close-32.png", "/media/icons/external.svg" 
  ]
}


